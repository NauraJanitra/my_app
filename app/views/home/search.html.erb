<h2>Search Article</h2>
<div>
<%= form_tag search_path, method: 'get' do %>
    <span> Search keyword </span>
    <br/>
    <%= text_area_tag 'keyword', '' %>
    <br/>
    <%= submit_tag 'search'%>

<%- end %>
</div>
<small>keyword: <%= params[:keyword] %></small>
<ul>
    <%- for article in @articles do %>
    <li>
        <strong><%= link_to article.title, read_path(article_id: article.id) %></strong>
        <small>
        Oleh <%= article.user.full_name %>
        Pada <%= article.created_at.to_s(:short) %>
        </small>
    </li>
    <%- end %>
</ul>
